doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(http-equiv="x-ua-compatible" content="ie=edge")
    title #{title}
    block head_css_before
    link(rel="stylesheet" href="/panel/plugins/fontawesome-free/css/all.min.css")
    link(rel="stylesheet" href="/panel/dist/css/adminlte.min.css")
    link(href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet")
    block head_css_after
    block head_js

  body.hold-transition.sidebar-mini
    .wrapper
      include ./partials/topnav.pug
      include ./partials/sidenav.pug
      include ./partials/aside.pug

      .content-wrapper: block content

      include ./partials/footer.pug

    block body_js_before
    script(src="/panel/plugins/jquery/jquery.min.js")
    script(src="/panel/plugins/bootstrap/js/bootstrap.bundle.min.js")
    script(src="/panel/dist/js/adminlte.min.js")
    script(src="/panel/dist/js/demo.js")
    script(src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js")
    script(src='https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js')
    block body_js_after
