aside.main-sidebar.sidebar-dark-primary.elevation-4
  a.brand-link(href="/dashboard")
    img.brand-image.img-circle.elevation-3(src=assetUrl + "/panel/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" style="opacity: .8")
    span.brand-text.font-weight-light #{title}
  .sidebar
    .user-panel.mt-3.pb-3.mb-3.d-flex
      .image: img.img-circle.elevation-2(src=assetUrl + "/panel/dist/img/user2-160x160.jpg" alt="User Image")
      .info: a.d-block(href="#") #{user.name}
    nav.mt-2
      ul.nav.nav-pills.nav-sidebar.flex-column(data-widget="treeview" role="menu" data-accordion="false")
        li.nav-item.has-treeview
          a.nav-link(href="#")
            i.nav-icon.fas.fa-tachometer-alt
            p Category
              i.right.fas.fa-angle-left
          ul.nav.nav-treeview
            li.nav-item: a.nav-link(href="/category/create")
              i.far.fa-circle.nav-icon
              p Create

            li.nav-item: a.nav-link(href="/category")
              i.far.fa-circle.nav-icon
              p List

        li.nav-item.has-treeview
          a.nav-link(href="#")
            i.nav-icon.fas.fa-tachometer-alt
            p Products
              i.right.fas.fa-angle-left
          ul.nav.nav-treeview
            li.nav-item: a.nav-link(href="/product/create")
              i.far.fa-circle.nav-icon
              p Create

            li.nav-item: a.nav-link(href="/product")
              i.far.fa-circle.nav-icon
              p List

        li.nav-item: a.nav-link(href="#")
            i.nav-icon.fas.fa-th
            p
              | Simple Link
              span.right.badge.badge-danger New

        li.nav-item: a.nav-link(href="/logout")
          i.nav-icon.fas.fa-th
          p Logout
